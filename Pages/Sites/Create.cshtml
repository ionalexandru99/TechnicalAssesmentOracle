@page
@model TechnicalAssesmentOracle.Pages.Sites.CreateModel

@{
    ViewData["Title"] = "Technical Assesment Oracle";
    ViewData["Page"] = "Sites";
}

<h1>Create</h1>

<h4>Site</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Site.ID" class="control-label"></label>
                <input asp-for="Site.ID" class="form-control" />
                <span asp-validation-for="Site.ID" class="text-danger">@Model.InvalidId</span>
            </div>
            <div class="form-group">
                <label asp-for="Site.Address" class="control-label"></label>
                <input asp-for="Site.Address" class="form-control" />
                <span asp-validation-for="Site.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.Doctor" class="control-label"></label>
                <input asp-for="Site.Doctor" class="form-control" />
                <span asp-validation-for="Site.Doctor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Site.Active" /> @Html.DisplayNameFor(model => model.Site.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
