@page
@model TechnicalAssesmentOracle.Pages.Sites.IndexModel

@{
    ViewData["Title"] = "Technical Assesment Oracle";
    ViewData["Page"] = "Sites";
}

<h1>@ViewData["Page"]</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Site[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Site[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Site[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Site[0].Active)
            </th>
            <th>
                Medication Units
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Site) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Model.Medications(item.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
