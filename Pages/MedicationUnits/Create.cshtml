@page
@model TechnicalAssesmentOracle.Pages.MedicationUnits.CreateModel

@{
    ViewData["Title"] = "Technical Assesment Oracle";
    ViewData["Page"] = "Subjects";
}

<h1>Create</h1>

<h4>MedicationUnit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicationUnit.MedicationId" class="control-label"></label>
                <select asp-for="MedicationUnit.MedicationId" class ="form-control" asp-items="ViewBag.MedicationId">
                    @foreach(var medication in Model.Medications)
                    {
                        <option value="@medication.ID">@medication.ID</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MedicationUnit.SiteId" class="control-label"></label>
                <select asp-for="MedicationUnit.SiteId" class ="form-control" asp-items="ViewBag.SiteId">
                    @foreach(var site in Model.Sites)
                    {
                        <option value="@site.ID">@site.ID</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MedicationUnit.DepotId" class="control-label"></label>
                <select asp-for="MedicationUnit.DepotId" class ="form-control" asp-items="ViewBag.DepotId">
                    @foreach(var depot in Model.Depots)
                    {
                        <option value="@depot.ID">@depot.ID</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MedicationUnit.Quantity" class="control-label"></label>
                <input asp-for="MedicationUnit.Quantity" class="form-control" />
                <span asp-validation-for="MedicationUnit.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
